                                    HeightRequest="20"
                                    HorizontalOptions="StartAndExpand"
                                    Text="{Binding User.Address.CityCapitalized}"
                                    TextColor="{StaticResource babublue}" />-->
                            </FlexLayout>
                        </StackLayout>
                    </FlexLayout>


                </Frame>

                <!--  Addresses Section  -->
                <StackLayout
                    Margin="0,20,0,0"
                    Padding="15,0"
                    IsVisible="{Binding IsUserLoggedIn}">
