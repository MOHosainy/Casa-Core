<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiStoreApp.Views.ProfilePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
    xmlns:converters="clr-namespace:MauiStoreApp.Converters"
    xmlns:local="clr-namespace:MauiStoreApp.ViewModels"
    xmlns:model="clr-namespace:MauiStoreApp.Models"
    xmlns:modelroot="clr-namespace:MauiStoreApp.Models"
    xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Converters;assembly=CommunityToolkit.Maui"
    x:DataType="local:ProfilePageViewModel"
    BackgroundColor="{StaticResource babublue}">






    <Shell.TitleView>
        <Grid HorizontalOptions="FillAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  title in the middle  -->
            <Label
                Grid.Column="0"
                FontAttributes="Bold"
                FontFamily="AstoreEczarSemiBold"
                FontSize="20"
                HorizontalOptions="CenterAndExpand"
                Text="My account"
                TextColor="{StaticResource KHly}"
                VerticalOptions="CenterAndExpand" />

            <!--  right button placeholder  -->
            <!--<Button
                Grid.Column="1"
                HorizontalOptions="End"
                Text="" />-->
        </Grid>
    </Shell.TitleView>

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:FirstLetterUppercaseConverter x:Key="FirstLetterConverter" />

            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Behaviors>
        <behaviors:EventToCommandBehavior Command="{Binding InitCommand}" EventName="NavigatedTo" />
    </ContentPage.Behaviors>

    <!--  page wrapper  -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackLayout
                Grid.Row="0"
                Padding="0"
                IsVisible="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}">
                <Frame
                    Margin="-90,-75,-5,0"
                    BackgroundColor="{StaticResource KHly}"
                    BorderColor="Transparent"
                    CornerRadius="120"
                    HeightRequest="180"
                    HorizontalOptions="FillAndExpand"
                    IsVisible="{Binding IsUserLoggedIn}"
                    ZIndex="0">

                    <FlexLayout
                        Margin="80,55,0,0"
                        AlignItems="Center"
                        BackgroundColor="{StaticResource KHly}"
                        Direction="Row">

                        <!--  Avatar with Initials  -->
                        <Frame
                            Margin="8"
                            Padding="0"
                            BackgroundColor="{StaticResource babublue}"
                            BorderColor="White"
                            CornerRadius="30"
                            HasShadow="True"
                            HeightRequest="55"
                            WidthRequest="55"
                            ZIndex="2">
                            <Label
                                FontAttributes="Bold"
                                FontSize="20"
                                HorizontalOptions="Center"
                                Text="{Binding AvatarInitial, Converter={StaticResource FirstLetterConverter}}"
                                TextColor="{StaticResource KHly}"
                                VerticalOptions="Center" />
                        </Frame>

                        <StackLayout
                            HorizontalOptions="Center"
                            Spacing="5"
                            VerticalOptions="Center">
                            <!--  Name  -->
                            <Label
                                Margin="0,0,0,3"
                                FontAttributes="Bold"
                                FontSize="20"
                                HorizontalOptions="Center"
                                Text="{Binding Email}"
                                TextColor="{StaticResource babublue}" />

                            <FlexLayout AlignItems="Center" Direction="Row">

                                <!--  Location marker icon  -->
                                <!--<Image
                                    Margin="1,0,0,0"
