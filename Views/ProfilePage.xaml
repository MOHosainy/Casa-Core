                    <FlexLayout
                        Margin="0,8,0,0"
                        AlignItems="Center"
                        Direction="Row"
                        HeightRequest="20"
                        IsVisible="{Binding IsUserLoggedIn}"
                        JustifyContent="SpaceBetween">
                        <Label
                            FontAttributes="Bold"
                            FontSize="17"
                            Text="Sign out"
                            TextColor="Black">
                            <Label.GestureRecognizers>
