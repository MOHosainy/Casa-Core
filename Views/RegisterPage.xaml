<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiStoreApp.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:MauiStoreApp.ViewModels">

    <ContentPage.BindingContext>
        <viewmodels:RegisterViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15">
            <Label
                FontSize="24"
                HorizontalOptions="Center"
                Text="تسجيل حساب جديد" />
            <!--<Entry Placeholder="اسم المستخدم" Text="{Binding Username}" />-->
            <Entry Placeholder="البريد الإلكتروني" Text="{Binding Email}" />

            <Entry
                IsPassword="True"
                Placeholder="كلمة المرور"
                Text="{Binding Password}" />
            <Button
                BackgroundColor="#2196F3"
                Command="{Binding RegisterCommand}"
                Text="تسجيل"
                TextColor="White" />


            <Label
                Margin="0,10,0,0"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Text="لديك حساب بالفعل؟ تسجيل الدخول"
                TextColor="Blue">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToLoginCommand}" />
                </Label.GestureRecognizers>
            </Label>


            <ActivityIndicator
                HorizontalOptions="Center"
                IsRunning="{Binding IsBusy}"
                IsVisible="{Binding IsBusy}"
                VerticalOptions="Center" />

        </VerticalStackLayout>



    </ScrollView>



</ContentPage>
