<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiStoreApp.Views.CheckoutPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiStoreApp.ViewModels"
    xmlns:resx="clr-namespace:OURSTORE.Localization"
    x:Name="RootPage"
    BackgroundColor="{StaticResource babublue}"
    FlowDirection="{Binding CurrentFlowDirection}">

    <!--  ✅ Title Bar مثل Category  -->
    <Shell.TitleView>
        <Grid HorizontalOptions="FillAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--<ImageButton
                Grid.Column="0"
                BackgroundColor="Transparent"
                CornerRadius="20"
                HeightRequest="25"
                HorizontalOptions="Start"
                Source="arrow_back.svg"
                WidthRequest="25">
                <ImageButton.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:CheckoutViewModel}}, Path=GoBackCommand}" />
                </ImageButton.GestureRecognizers>
            </ImageButton>-->


            <Label
                Grid.Column="0"
                Margin="0,0,40,0"
                FontAttributes="Bold"
                FontFamily="OpenSansCondensedBold"
                FontSize="35"
                HorizontalOptions="CenterAndExpand"
                Text="{x:Static resx:AppResources.Checkout}"
                TextColor="{StaticResource KHly}"
                VerticalOptions="CenterAndExpand" />
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="15">

            <!--  ✅ Cart Items  -->
            <CollectionView ItemsSource="{Binding CartItems}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label
                                FontAttributes="Bold"
                                FontSize="22"
                                Text="{Binding TotalQuantity}" />

                            <Label
                                Grid.Column="1"
                                FontAttributes="Bold"
                                FontFamily="OpenSansCondensedBold"
                                FontSize="22"
                                Text="{Binding TotalPrice, StringFormat='€{0:F2}'}"
                                TextColor="Green" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!--  ✅ Total Section  -->
            <Grid Padding="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label
                    FontAttributes="Bold"
                    FontFamily="OpenSansCondensedBold"
                    FontSize="28"
                    Text="{x:Static resx:AppResources.TotalQuantity}"
                    TextColor="{StaticResource KHly}" />

                <Label
                    Grid.Column="1"
                    FontAttributes="Bold"
                    FontFamily="OpenSansCondensedBold"
                    FontSize="25"
                    Text="{Binding TotalQuantity}"
                    TextColor="{StaticResource KHly}" />

                <Label
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    FontAttributes="Bold"
                    FontFamily="OpenSansCondensedBold"
                    FontSize="28"
                    Text="{x:Static resx:AppResources.TotalPrice}"
                    TextColor="{StaticResource KHly}" />

                <Label
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,10,0,0"
                    FontAttributes="Bold"
                    FontFamily="OpenSansCondensedBold"
                    FontSize="22"
                    Text="{Binding TotalPrice, StringFormat='€{0:F2}'}"
                    TextColor="Green" />
            </Grid>

            <!--  ✅ Confirm Order  -->
            <Button
                BackgroundColor="{StaticResource White}"
                Command="{Binding ConfirmOrderCommand}"
                CornerRadius="15"
                FontAttributes="Bold"
                FontFamily="OpenSansCondensedBold"
                FontSize="28"
                IsVisible="{Binding Source={x:Reference RootPage}, Path=BindingContext.IsUserLoggedIn}"
                Text="{x:Static resx:AppResources.ConfirmOrder}"
                TextColor="{StaticResource KHly}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
