<Shell
    x:Class="MauiStoreApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiStoreApp.Views"
    BackgroundColor="{StaticResource babublue}"
    Shell.FlyoutBehavior="Disabled">

    <!--  ✅ صفحة اللوجين خارج التبويبات  -->
    <ShellContent ContentTemplate="{DataTemplate views:LoginPage}" Route="LoginPage" />

    <ShellContent ContentTemplate="{DataTemplate views:RegisterPage}" Route="RegisterPage" />


    <!--  ✅ التبويبات بعد تسجيل الدخول  -->
    <TabBar Route="MainTabs">

        <Tab Title="Home" Icon="home.svg">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" Route="HomePage" />
        </Tab>

        <Tab Title="Recently Viewed" Icon="recently_viewed.svg">
            <ShellContent ContentTemplate="{DataTemplate views:RecentlyViewedPage}" Route="RecentlyViewedPage" />
        </Tab>

        <Tab Title="Cart" Icon="cart.svg">
            <ShellContent ContentTemplate="{DataTemplate views:CartPage}" Route="CartPage" />
        </Tab>

        <Tab Title="Account" Icon="profile.svg">
            <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}" Route="ProfilePage" />
        </Tab>
        <!--<ShellContent Route="LoginPage" ContentTemplate="{DataTemplate views:LoginPage}" />-->


    </TabBar>
</Shell>
